<div class="well well--neo d-flex justify-content-between align-items-center">
  <!-- LEFT SIDE: Create + Search -->
  <div class="d-flex gap-2">

    <button id="searchPost" onclick="window.location.href='/index'" class="submitButton">Cancel Post</button>
    
