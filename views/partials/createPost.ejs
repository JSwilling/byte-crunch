<!---------FORM--------------------------------------------------------->



<div class="form-container">

  <% if (typeof success !== 'undefined' && success) { %>
    <!-- âœ… Success Message -->
    <div class="alert alert-success text-center" role="alert">
      âœ… Post created successfully!
      <br><br>
      <a href="/index" class="btn btn-primary mt-2">Back to Home</a>
    </div>
  <% } else { %>
    <!-- ðŸ“ Show Form -->
    <form id="createPost" action="/create-post" method="POST" enctype="multipart/form-data">
      <label class="formLabel" for="author">Author Name:</label>
      <input class="formInput" type="text" id="author" name="author" placeholder="Jane Dev">

      <label class="formLabel" for="social">Social Handle:</label>
      <input class="formInput" type="text" id="social" name="social" placeholder="@janedev">

      <label class="formLabel" for="email">Email:</label>
      <input class="formInput" type="email" id="email" name="email" placeholder="jane@example.com">

      <label class="formLabel" for="category">Category (e.g. Frontend, Backend):</label>
      <input class="formInput" type="text" id="category" name="category" placeholder="Frontend">

      <label class="formLabel" for="title">Post Title:</label>
      <input class="formInput" type="text" id="title" name="title" placeholder="Your blog post title">

      <label class="formLabel" for="tags">Tags (comma-separated):</label>
      <input class="formInput" type="text" id="tags" name="tags" placeholder="css, react, tailwind">

      <label class="formLabel" for="content">Post Content:</label>
      <textarea id="content" name="content" rows="10" placeholder="Your post starts here..."></textarea>

      <label class="formLabel " for="image">Upload Image (optional):</label>
      <input class="formInput img-button" type="file" id="image" name="image" accept="image/*">

      <input class="submitButton" type="submit" value="Submit Post">
    </form>
  <% } %>

</div>

